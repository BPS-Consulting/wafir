---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Wafir - Feedback & Bug Reporting Widget",
  description = "A powerful, lightweight feedback and bug reporting widget that bridges user feedback to your GitHub workflow.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/wafir/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <script type="module" src="/wafir/wafir-widget/wafir.js"></script>
    <link rel="stylesheet" href="/wafir/wafir-widget/styles/wafir-reporter.css" />
    <link rel="stylesheet" href="/wafir/wafir-widget/styles/wafir-form.css" />
  </head>
  <body>
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>

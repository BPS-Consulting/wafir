---
import Layout from '../layouts/Layout.astro';
import { Content as InstallationContent } from '../content/installation.md';
---

<Layout title="Installation - Wafir" description="Learn how to install and configure the Wafir feedback widget in your application.">
	<section class="page-header section">
		<div class="container">
			<h1>Installation</h1>
			<p>Get Wafir running in your application in minutes</p>
		</div>
	</section>

	<section class="content section">
		<div class="container">
			<div class="prose">
				<InstallationContent />
			</div>
		</div>
	</section>
</Layout>

<style>
	.page-header {
		padding-bottom: 2rem;
		border-bottom: 1px solid var(--color-border);
	}

	.page-header h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
	}

	.page-header p {
		color: var(--color-text-muted);
		font-size: 1.125rem;
	}

	.prose {
		max-width: 800px;
	}

	.prose :global(h2) {
		font-size: 1.5rem;
		margin-top: 3rem;
		margin-bottom: 1rem;
		padding-bottom: 0.5rem;
		border-bottom: 1px solid var(--color-border);
	}

	.prose :global(h3) {
		font-size: 1.125rem;
		margin-top: 2rem;
		margin-bottom: 0.75rem;
	}

	.prose :global(p) {
		color: var(--color-text-muted);
		margin-bottom: 1rem;
		line-height: 1.7;
	}

	.prose :global(a) {
		color: var(--color-primary);
	}

	.prose :global(a:hover) {
		text-decoration: underline;
	}

	.prose :global(blockquote) {
		margin: 1.5rem 0;
		padding: 1rem;
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: 8px;
		font-size: 0.875rem;
	}

	.prose :global(blockquote p) {
		margin-bottom: 0;
	}

	.prose :global(pre) {
		background: var(--color-bg-elevated);
		border: 1px solid var(--color-border);
		border-radius: 8px;
		padding: 1rem;
		overflow-x: auto;
		margin-bottom: 1.5rem;
	}

	.prose :global(code) {
		font-family: var(--font-mono);
		font-size: 0.875rem;
	}

	.prose :global(p code),
	.prose :global(li code) {
		background: var(--color-bg-elevated);
		padding: 0.125rem 0.375rem;
		border-radius: 4px;
	}

	.prose :global(ul),
	.prose :global(ol) {
		margin-bottom: 1rem;
		padding-left: 1.5rem;
	}

	.prose :global(li) {
		color: var(--color-text-muted);
		margin-bottom: 0.25rem;
	}

	.prose :global(table) {
		width: 100%;
		border-collapse: collapse;
		font-size: 0.875rem;
		margin-bottom: 1.5rem;
	}

	.prose :global(th),
	.prose :global(td) {
		padding: 0.75rem;
		text-align: left;
		border-bottom: 1px solid var(--color-border);
	}

	.prose :global(th) {
		background: var(--color-bg-elevated);
		font-weight: 600;
	}

	.prose :global(td code) {
		font-family: var(--font-mono);
		font-size: 0.8125rem;
	}

	.prose :global(hr) {
		border: 0;
		border-top: 1px solid var(--color-border);
		margin: 3rem 0;
	}

	@media (max-width: 768px) {
		.page-header h1 {
			font-size: 2rem;
		}

		.prose :global(table) {
			display: block;
			overflow-x: auto;
		}
	}
</style>

{
  "openapi": "3.0.3",
  "info": {
    "title": "Fastify Lambda API",
    "description": "Serverless API documentation generated from route schemas",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {}
  },
  "paths": {
    "/config": {
      "get": {
        "summary": "Get WAFIR Configuration",
        "tags": [
          "WAFIR"
        ],
        "description": "Fetches and parses .github/wafir.yaml from the target repository.",
        "parameters": [
          {
            "schema": {
              "type": "number"
            },
            "in": "query",
            "name": "installationId",
            "required": true
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "owner",
            "required": true
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "repo",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          },
          "404": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/submit": {
      "post": {
        "summary": "Submit Feedback/Issue",
        "tags": [
          "WAFIR"
        ],
        "description": "Creates a new issue in the target GitHub repository.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "installationId",
                  "owner",
                  "repo",
                  "title",
                  "body"
                ],
                "properties": {
                  "installationId": {
                    "type": "number"
                  },
                  "owner": {
                    "type": "string"
                  },
                  "repo": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "body": {
                    "type": "string"
                  },
                  "labels": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "issueUrl": {
                      "type": "string"
                    },
                    "issueNumber": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/upload-url": {
      "get": {
        "summary": "Get SnapStore Upload URL",
        "tags": [
          "WAFIR"
        ],
        "description": "Generates a temporary S3 Presigned URL. The Widget should PUT the image to this URL.",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "contentType",
            "required": true,
            "description": "MIME type of the image (e.g., image/png)"
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "uploadUrl": {
                      "type": "string"
                    },
                    "publicUrl": {
                      "type": "string",
                      "description": "The final URL of the image after upload"
                    },
                    "expiresIn": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local Development Server"
    }
  ]
}
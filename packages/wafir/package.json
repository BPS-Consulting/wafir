{
  "name": "wafir",
  "version": "0.1.0",
  "description": "A lightweight feedback and issue reporting widget that seamlessly connects user input to your GitHub-based development workflow",
  "type": "module",
  "main": "dist/wafir.js",
  "module": "dist/wafir.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/wafir.js"
    },
    "./styles/reporter.css": "./dist/styles/wafir-reporter.css",
    "./styles/form.css": "./dist/styles/wafir-form.css",
    "./styles/highlighter.css": "./dist/styles/wafir-highlighter.css"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "feedback",
    "bug-report",
    "issue-tracker",
    "web-component",
    "lit",
    "github",
    "user-feedback",
    "widget",
    "screenshot",
    "telemetry"
  ],
  "author": "BPS Consulting",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BPS-Consulting/wafir.git",
    "directory": "packages/wafir"
  },
  "bugs": {
    "url": "https://github.com/BPS-Consulting/wafir/issues"
  },
  "homepage": "https://bps-consulting.github.io/wafir/",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc -p tsconfig.build.json && vite build",
    "prepublishOnly": "pnpm build",
    "generate:api": "openapi-typescript ../../apps/bridge/swagger.json -o src/api/schema.d.ts"
  },
  "dependencies": {
    "@nanostores/lit": "^0.2.3",
    "@standard-schema/spec": "^1.0.0",
    "lit": "^3.3.1",
    "modern-screenshot": "^4.6.7",
    "nanostores": "^1.1.0",
    "openapi-fetch": "^0.15.0"
  },
  "devDependencies": {
    "@size-limit/preset-big-lib": "^11.2.0",
    "openapi-typescript": "^7.10.1",
    "size-limit": "^11.2.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  },
  "size-limit": [
    {
      "path": "dist/wafir.js",
      "limit": "20 kB"
    }
  ]
}

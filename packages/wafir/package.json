{
  "name": "wafir",
  "license": "AGPL-3.0-only",
  "description": "A powerful, framework-agnostic UI widget library built with Lit & TypeScript.",
  "author": "BPS Consulting",
  "repository": {
    "type": "git",
    "url": "https://github.com/BPS-Consulting/wafir.git",
    "directory": "packages/wafir"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "version": "0.1.0",
  "type": "module",
  "main": "dist/wafir.js",
  "exports": {
    ".": {
      "import": "./dist/wafir.js"
    },
    "./browser": "./dist/browser/wafir.browser.js",
    "./styles/widget.css": "./dist/styles/wafir-widget.css",
    "./styles/form.css": "./dist/styles/wafir-form.css",
    "./styles/highlighter.css": "./dist/styles/wafir-highlighter.css"
  },
  "scripts": {
    "dev": "vite build --watch",
    "prebuild": "pnpm dlx shx cp ../../README.md ../../LICENSE .",
    "build": "tsc && vite build --mode=production",
    "build:browser": "vite build --mode browser",
    "build:all": "pnpm run build && pnpm run build:browser",
    "generate:api": "openapi-typescript ../../apps/bridge/swagger.json -o src/api/schema.d.ts"
  },
  "dependencies": {
    "@nanostores/lit": "^0.2.3",
    "dompurify": "^3.3.1",
    "lit": "^3.3.1",
    "marked": "^17.0.1",
    "modern-screenshot": "^4.6.7",
    "nanostores": "^1.1.0",
    "openapi-fetch": "^0.15.0"
  },
  "keywords": [
    "lit",
    "widget",
    "ui",
    "typescript",
    "web components",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/BPS-Consulting/wafir/issues"
  },
  "homepage": "https://BPS-Consulting.github.io/wafir",
  "sideEffects": false,
  "types": "dist/wafir.d.ts",
  "devDependencies": {
    "openapi-typescript": "^7.10.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  }
}

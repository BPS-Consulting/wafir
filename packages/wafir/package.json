{
  "name": "wafir",
  "license": "AGPL-3.0-only",
  "description": "A powerful, framework-agnostic UI widget library built with Lit & TypeScript.",
  "author": "BPS Consulting",
  "repository": {
    "type": "git",
    "url": "https://github.com/BPS-Consulting/wafir.git",
    "directory": "packages/wafir"
  },
  "files": [
    "dist",
    "!dist/iife",
    "README.md",
    "LICENSE"
  ],
  "version": "0.0.3",
  "type": "module",
  "main": "dist/wafir.cjs",
  "module": "dist/wafir.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/wafir.js",
      "require": "./dist/wafir.cjs"
    },
    "./styles/widget.css": "./dist/styles/wafir-widget.css",
    "./styles/form.css": "./dist/styles/wafir-form.css",
    "./styles/highlighter.css": "./dist/styles/wafir-highlighter.css"
  },
  "scripts": {
    "dev": "vite build --watch",
    "prebuild": "pnpm dlx shx cp ../../README.md ../../LICENSE .",
    "build": "vite build && tsc",
    "build:iife": "vite build --mode iife",
    "build:all": "pnpm run build && pnpm run build:iife",
    "generate:api": "openapi-typescript ../../apps/bridge/swagger.json -o src/api/schema.d.ts",
    "size": "pnpm run build:all && size-limit"
  },
  "dependencies": {
    "@nanostores/lit": "^0.2.3",
    "dompurify": "^3.3.1",
    "js-yaml": "^4.1.1",
    "lit": "^3.3.1",
    "marked": "^17.0.1",
    "modern-screenshot": "^4.6.7",
    "nanostores": "^1.1.0",
    "openapi-fetch": "^0.15.0"
  },
  "keywords": [
    "lit",
    "widget",
    "ui",
    "typescript",
    "web components",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/BPS-Consulting/wafir/issues"
  },
  "homepage": "https://BPS-Consulting.github.io/wafir",
  "sideEffects": [
    "src/**/*.ts",
    "dist/**/*.js"
  ],
  "types": "dist/index.d.ts",
  "size-limit": [
    {
      "name": "NPM ESM Bundle",
      "path": "dist/wafir.js"
    },
    {
      "name": "NPM CJS Bundle",
      "path": "dist/wafir.cjs"
    },
    {
      "name": "IIFE Browser Bundle",
      "path": "dist/iife/wafir.js"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-app": "^12.0.0",
    "@types/js-yaml": "^4.0.9",
    "openapi-typescript": "^7.10.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "size-limit": "^12.0.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}

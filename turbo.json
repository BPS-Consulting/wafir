{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate:swagger": {
      "outputs": ["swagger.json"],
      "cache": true
    },
    "generate:api": {
      "dependsOn": ["bridge#generate:swagger"],
      "outputs": ["src/api/index.ts"],
      "cache": true
    }
  }
}
